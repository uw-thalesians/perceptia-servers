{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "apiProfile": "2018-06-01-profile",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "location": {
            "type": "string",
            "defaultValue": "westus2"
        },
        "publicIpAddressName": {
            "type": "string"
        },
        "publicIpAddressType": {
            "type": "string"
        },
        "publicIpAddressSku": {
            "type": "string"
        },
        "partOf": {
                "type": "string",
                "metadata": {
                    "description": "Tag noting the part of the application the resource group is for."
                }
        },
        "environment": {
            "type": "string",
            "metadata": {
                "description": "Tag noting the part of the application the resource group is for."
            },
            "allowedValues": [
                "development",
                "production"
                ]
    }
    },
    "resources": [
        {
            "name": "[parameters('publicIpAddressName')]",
            "apiVersion": "2018-08-01",
            "type": "Microsoft.Network/publicIpAddresses",
            "location": "[parameters('location')]",
            "properties": {
                "publicIpAllocationMethod": "[parameters('publicIpAddressType')]"
            },
            "sku": {
                "name": "[parameters('publicIpAddressSku')]"
            },
            "tags": {
                "use": "capstone",
                "part-of": "[parameters('partOf')]",
                "environment": "[parameters('environment')]"
            }
        }
    ],
    "outputs": {
        "publicIpAddressName": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses',parameters('publicIpAddressName'))).IpAddress]"
        }
    }
}